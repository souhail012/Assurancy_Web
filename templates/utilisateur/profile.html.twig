        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_dashboard') }}">
              <i class="icon-grid menu-icon"></i>
              <span class="menu-title">Dashboard</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_utilisateurs') }}">
              <i class="icon-layout menu-icon"></i>
              <span class="menu-title">Utilisateurs</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_assurances') }}">
              <i class="icon-layout menu-icon"></i>
              <span class="menu-title">Assurances</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_community') }}">
              <i class="icon-layout menu-icon"></i>
              <span class="menu-title">Communaut√©</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_assistance') }}">
              <i class="icon-layout menu-icon"></i>
              <span class="menu-title">Assistance</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_sos') }}">
              <i class="icon-layout menu-icon"></i>
              <span class="menu-title">SOS</span>
            </a>
          </li>
        </ul>
      </nav>
    <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                    <button type="button" class="btn btn-primary" onclick="window.location='{{ path("app_dashboard") }}'"><i class="ti-arrow-left"></i> Back</button>
                    <p class="card-title my-2">My profile</p>
                    <img class="img-account-profile rounded-circle" style="width:200px;height:200px" src="{{ asset('uploads/' ~ utilisateur.image|default('images/faces/face28.jpg')) }}" alt="">
                    {{ include('utilisateur/p_form.html.twig') }}
                    </div>
                  </div>
                </div>
                <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                      <h3 style="color:black;">Reset my password</h3>
                      {% set normal_input_attr = { 'attr': { 'class': 'form-control p-input', 'required': 'required'} } %}
                      {{ form_start(formRs, {'attr': {'class': 'forms-sample','novalidate' : 'novalidate'}}) }}
                        <div class="form-group">
                          {{ form_label(formRs.cup) }}
                        </div>
                        <div class="form-group">
                          {{ form_errors(formRs.cup) }}
                          {{ form_widget(formRs.cup,normal_input_attr) }}
                        </div>
                        <div class="form-group">
                          {{ form_widget(formRs.np) }}
                        </div>
                        <div class="col-12">
                          <button type="submit" class="btn btn-primary rounded-pill">Reset password</button>
                        </div>
                      {{ form_end(formRs) }}
                    </div>
                  </div>
                </div>
                </div>
              </div>
            </div>
        </div>
{% endblock %}
