<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
{% set normal_input_attr = { 'attr': { 'class': 'form-control input-box form-ensurance-header-control', 'required': 'required'} } %}
{{ form_start(form, {'attr': {'class': 'mb-3','novalidate' : 'novalidate'}}) }}
    <div class="form-floating mb-3">
        {{ form_widget(form.titre,normal_input_attr|merge({'id': 'floatingT'})) }}
        {{ form_label(form.titre,"Titre", {'label_attr': {'for': form.titre.vars.id}}) }}
        {{ form_errors(form.titre) }}
    </div>
    <div class="form-floating mb-3">
        {{ form_widget(form.contenu,normal_input_attr|merge({'id': 'floatingC'})) }}
        {{ form_label(form.contenu,"Contenu", {'label_attr': {'for': form.contenu.vars.id}}) }}
        {{ form_errors(form.contenu) }}
    </div>
    <div class="form-floating mb-3">
        {{ form_widget(form.image,normal_input_attr|merge({'id': 'floatingIm'})) }}
        {{ form_label(form.image,"Image", {'label_attr': {'for': form.image.vars.id}}) }}
        {{ form_errors(form.image) }}
    </div>
    <div class="col-12 d-grid">
    <button type="submit" class="btn btn-primary rounded-pill" id="submit-btn" onclick="return validateForm();">{{ button_label|default("Save") }}</button>
    <p class="text-400 mt-3 text-center">Si vous ne poss√©dez pas de compte <a href="{{ path('inscription') }}">Cliquez ici</a></p>
    </div>
{{ form_end(form) }}